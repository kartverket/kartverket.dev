{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "FunctionEntityV1alpha1",
  "description": "A Function describes a function instance in your infrastructure",

  "allOf": [
    {
      "$ref": "Entity"
    },
    {
      "type": "object",
      "required": ["apiVersion", "kind", "spec"],
      "properties": {
        "apiVersion": {
          "enum": ["kartverket.dev/v1alpha1"]
        },
        "kind": {
          "enum": ["Function"]
        },
        "spec": {
          "type": "object",
          "required": ["owner"],
          "properties": {
            "owner": {
              "type": "string",
              "description": "An entity reference to the owner of the function",
              "minLength": 1
            },
            "childFunctions": {
              "type": "array",
              "description": "Entity references to children of the function"
            },
            "childSystems": {
              "type": "array",
              "description": "Entity references to systems of this function"
            },
            "criticality": {
              "type": "string",
              "description": "Criticality of the function",
              "minLength": 1
            },
            "dependsOn": {
              "type": "array",
              "description": "Entity references to other functions this function depends on"
            }
          }
        }
      }
    }
  ]
}
